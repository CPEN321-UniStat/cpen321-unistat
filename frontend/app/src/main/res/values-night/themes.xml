<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_50</item>
        <item name="colorPrimaryVariant">@color/light_purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <!-- for bottom nav bar activity indicator -->
        <item name="colorSecondaryContainer">@color/purple_100</item>
        <!-- for fab bg color -->
        <item name="colorPrimaryContainer">@color/light_purple_100</item>
        <!-- for icon on fab outline -->
        <item name="colorOnPrimaryContainer">@color/black</item>
        <!-- for button outline -->
        <item name="colorOutline">@color/purple_50</item>


    </style>
</resources>